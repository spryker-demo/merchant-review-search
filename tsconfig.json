{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "target": "es2015",
        "module": "esnext",
        "typeRoots": ["node_modules/@types"],
        "lib": ["dom", "esnext"],
        "baseUrl": ".",
        "removeComments": true,
        "rootDir": ".",
        "paths": {
            "@mp/zed-ui/*": ["./Bundles/ZedUi/src/Spryker/Zed/ZedUi/Presentation/Components/*"]
        }
    },
    "exclude": ["**/node_modules/**", "**/*.spec.ts", "public", "dist", "**/dist/**"]
}
