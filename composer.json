{
    "name": "spryker/spryker-demo",
    "description": "Spryker Demo Packages",
    "license": "proprietary",
    "require": {
        "php": ">=8.0"
    },
    "replace": {
        "spryker-demo/merchant-registration": "*",
        "spryker-demo/merchant-registration-page": "*",
        "spryker-demo/merchant-registration-data-import": "*",
        "spryker-demo/merchant-registration-feature": "*"
    },
    "require-dev": {
        "spryker/code-sniffer": "dev-master"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "use-include-path": true,
        "process-timeout": 1200,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "cs-check": "php -d memory_limit=1300M vendor/bin/phpcs"
    }
}
