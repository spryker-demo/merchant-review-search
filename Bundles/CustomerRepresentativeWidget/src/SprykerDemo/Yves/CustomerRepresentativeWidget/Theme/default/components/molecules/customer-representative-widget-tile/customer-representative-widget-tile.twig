{% extends model('component') %}

{% define config = {
    name: 'customer-representative-widget-tile',
} %}

{% define data = {
    title: null,
    icon: null,
    text: null,
} %}

{% block body %}
    {% block icon %}
        {% if data.icon %}
            {% include atom('icon') with {
                data: {
                    name: data.icon,
                },
                class: config.name ~ '__icon',
            } only %}
        {% endif %}
    {% endblock %}

    <div class="{{ config.name }}__main">
        {% block title %}
            {% if data.title %}
                <h4 class="{{ config.name }}__title">{{ data.title }}</h4>
            {% endif %}
        {% endblock %}

        {% block text %}
            {% if data.text %}
                <p class="{{ config.name }}__text">{{ data.text }}</p>
            {% endif %}
        {% endblock %}
    </div>
{% endblock %}

