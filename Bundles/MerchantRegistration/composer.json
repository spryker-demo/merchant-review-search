{
    "name": "spryker-demo/merchant-registration",
    "type": "library",
    "description": "Merchant registration module",
    "license": "proprietary",
    "require": {
        "php": ">=8.0",
        "spryker/zed-request": "*",
        "spryker/merchant": "*",
        "spryker/merchant-user": "*",
        "spryker/mail": "*",
        "spryker/util-text": "*",
        "spryker/user": "*",
        "spryker/merchant-user": "*",
        "spryker/locale": "*",
        "spryker/store": "*",
        "spryker/kernel": "^3.30.0"
    },
    "require-dev": {
        "spryker/code-sniffer": "*",
        "spryker/testify": "*"
    },
    "autoload": {
        "psr-4": {
            "SprykerDemo\\": "src/SprykerDemo/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SprykerDemoTest\\": "tests/SprykerDemoTest/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "cs-check": "phpcs -p -s --standard=vendor/spryker/code-sniffer/SprykerStrict/ruleset.xml src/ tests/",
        "cs-fix": "phpcbf -p --standard=vendor/spryker/code-sniffer/SprykerStrict/ruleset.xml src/ tests/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
