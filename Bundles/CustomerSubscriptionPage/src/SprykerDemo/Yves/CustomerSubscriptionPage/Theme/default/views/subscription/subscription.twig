{% extends template('page-layout-customer', 'CustomerPage') %}

{% define data = {
    orders: _view.orderList,
    ordersAggregatedItemStateDisplayNames: _view.ordersAggregatedItemStateDisplayNames | default([]),
    customerCancelSubscriptionForm: _view.customerCancelSubscriptionForm,

    pagination: {
        parameters: {},
        currentPage: _view.pagination.page,
        paginationPath: 'customer/subscription',
        maxPage: _view.pagination.lastPage,
        showAlwaysFirstAndLast: true,
    },

    title: 'customer.account.subscriptions' | trans,
    activePage: 'subscription',
} %}

{% block customerContent %}
    {% embed molecule('action-bar') with {
        modifiers: ['first'],
        data: {
            title: 'customer.account.subscriptions' | trans,
        }
    } only %}
        {% block actions %}
        {% endblock %}
    {% endembed %}

    {% set CancelSubscriptionForm = data.customerCancelSubscriptionForm %}

    <div>

        {% include molecule('subscription-table', 'CustomerSubscriptionPage') with {
            data: {
                orders: data.orders.orders,
            },
            embed: {
                CancelSubscriptionForm: CancelSubscriptionForm,
            },
        } only %}

        <hr>

        {% include molecule('pagination') with {
            data: data.pagination,
        } only %}
    </div>
{% endblock %}
