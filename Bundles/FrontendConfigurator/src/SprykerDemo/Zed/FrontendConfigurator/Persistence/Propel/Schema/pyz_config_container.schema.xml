<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\ConfigContainer\Persistence"
          package="src.Orm.Zed.ConfigContainer.Persistence">

    <table name="pyz_config_container">
        <column name="name" type="VARCHAR" size="255" required="true" primaryKey="true"/>
        <column name="data" type="LONGVARCHAR" required="true"/>

        <id-method-parameter value="pyz_config_container_pk_seq"/>

        <behavior name="event">
            <parameter name="pyz_config_container_all" column="*"/>
        </behavior>
    </table>

</database>
