<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="MerchantReviewSearchRequest">
        <property name="idMerchant" type="int"/>
        <property name="requestParams" type="array" singular="requestParams"/>
    </transfer>

    <transfer name="MerchantReviewSearch">
        <property name="idMerchantReviewSearch" type="int"/>
        <property name="idMerchnatReview" type="int"/>
        <property name="fkMerchant" type="int"/>
        <property name="createdAt" type="string"/>
        <property name="updatedAt" type="string"/>
        <property name="data" type="array" singular="data"/>
        <property name="structuredData" type="string"/>
        <property name="key" type="string"/>
    </transfer>

    <transfer name="MerchantReviewCriteria">
        <property name="merchantReviewIds" type="int[]" singular="merchantReviewId"/>
        <property name="filter" type="Filter"/>
    </transfer>

     <transfer name="Filter">
        <property name="limit" type="int"/>
        <property name="offset" type="int"/>
        <property name="orderBy" type="string"/>
        <property name="orderDirection" type="string"/>
    </transfer>

</transfers>
